doctype html
head
    title AgencyTool
    style.
        .table {
            border-collapse: collapse;
            max-width: 600px;
            width: 100%;
        }

        .company {
            padding: 20px;
            font-size: 25px;
            color: #fff;
            background-color: #004853;
        }

        .title {
            font-size: 22px;
            padding: 20px 0;
            color: #191919;
            font-weight: 600;
        }

        .td {
            text-align: center;
        }

        .text {
            font-size: 18px;
            margin-bottom: 10px;
            color: rgba(25, 25, 25, 0.8);
        }

        .code {
            font-size: 20px;
            padding: 15px;
            border-radius: 8px;
            color: rgba(25, 25, 25, 0.8);
            border: 1px solid #004853;
            font-weight: 600;
        }
table(style="border-collapse: collapse; width: 100%;")
    tbody
        tr
            td(align="center")
                table(class="table")
                    thead
                        tr
                            th(class="company")
                                h1(style="margin: 0;") AgencyTool
                        tr
                            th(class="title")
                                h2(style="margin: 0;") #{title}
                    tbody
                        tr
                            td(class="td")
                                p(class="text") Your code
                        tr
                            td(class="td")
                                p(class="code") #{code}